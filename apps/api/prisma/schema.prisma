generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  title       String
  priceCents  Int
  sku         String?
  status      String
  inventory   Int
  createdAt   DateTime @default(now())
}

model Order {
  id          String   @id @default(cuid())
  number      Int
  status      String
  totalCents  Int
  customer    String
  createdAt   DateTime @default(now())
}
